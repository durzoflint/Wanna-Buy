<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/guideline4">

    <ImageView
        android:id="@+id/wanna_buy"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:adjustViewBounds="true"
        android:src="@drawable/app_icon"
        app:layout_constraintBottom_toTopOf="@+id/wanna_buy_btn_text"
        app:layout_constraintEnd_toStartOf="@+id/nav_ads_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nav_msg_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wanna_buy_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/wanna_buy"
        app:layout_constraintStart_toStartOf="@+id/wanna_buy"
        app:layout_constraintTop_toBottomOf="@+id/wanna_buy" />

    <ImageView
        android:id="@+id/nav_home_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/home_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nav_msg_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nav_msg_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/msg_blue"
        app:layout_constraintBottom_toBottomOf="@+id/nav_home_btn"
        app:layout_constraintEnd_toStartOf="@+id/wanna_buy"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nav_home_btn"
        app:layout_constraintTop_toTopOf="@+id/nav_home_btn" />

    <ImageView
        android:id="@+id/nav_ads_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ads_blue"
        app:layout_constraintBottom_toBottomOf="@+id/nav_account_btn"
        app:layout_constraintEnd_toStartOf="@+id/nav_account_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/wanna_buy"
        app:layout_constraintTop_toTopOf="@+id/nav_account_btn"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/nav_account_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/acc_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nav_ads_btn"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
