<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/orangeBtn</item>
        <item name="colorControlActivated">@color/orangeBtn</item>
        <item name="colorControlHighlight">@color/red</item>
    </style>

    <style name="noActionbar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/orangeBtn</item>
        <item name="colorControlActivated">@color/orangeBtn</item>
        <item name="colorControlHighlight">@color/red</item>
        <item name="android:textViewStyle">@style/textStyle</item>
        <item name="buttonBarStyle">@style/buttonTextStyle</item>
        <item name="checkboxStyle">@style/checkTextStyle</item>
    </style>

    <style name="checkTextStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="textStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="buttonTextStyle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="hintAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="questionTheme" parent="noActionbar">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="searchTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

</resources>
